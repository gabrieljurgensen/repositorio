  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "description": "ID do usuário" },
          "nome": { "type": "string", "description": "Nome do usuário" },
          "email": { "type": "string", "description": "E-mail do usuário" },
          "criado_em": { "type": "string", "format": "date-time", "description": "Data de criação" },
          "atualizado_em": { "type": "string", "format": "date-time", "description": "Data de atualização" }
        }
      },
      "UserInput": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "email": { "type": "string" },
          "senha": { "type": "string" }
        },
        "required": ["nome", "email", "senha"]
      },
      "Produto": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "description": "ID do produto" },
          "nome": { "type": "string", "description": "Nome do produto" },
          "preco_pago": { "type": "number", "description": "Preço de compra" },
          "descricao": { "type": "string", "description": "Descrição do produto" },
          "preco_vendido": { "type": "number", "description": "Preço de venda" },
          "id_categoria": { "type": "integer", "description": "ID da categoria" },
          "status": { "type": "integer", "description": "Status do produto (1=ativo, 0=inativo)" },
          "criado_em": { "type": "string", "format": "date-time" },
          "atualizado_em": { "type": "string", "format": "date-time" }
        }
      },
      "ProdutoInput": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "preco_pago": { "type": "number" },
          "descricao": { "type": "string" },
          "preco_vendido": { "type": "number" },
          "id_categoria": { "type": "integer" },
          "status": { "type": "integer" }
        },
        "required": ["nome", "preco_pago", "id_categoria", "status"]
      },
      "Categoria": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nome": { "type": "string" },
          "criado_em": { "type": "string", "format": "date-time" },
          "atualizado_em": { "type": "string", "format": "date-time" }
        }
      },
      "CategoriaInput": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" }
        },
        "required": ["nome"]
      },
      "Venda": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "usuario_id": { "type": "integer" },
          "data_venda": { "type": "string", "format": "date-time" },
          "valor_total": { "type": "number" },
          "status_venda": { "type": "string" },
          "criado_em": { "type": "string", "format": "date-time" },
          "atualizado_em": { "type": "string", "format": "date-time" }
        }
      },
      "VendaInput": {
        "type": "object",
        "properties": {
